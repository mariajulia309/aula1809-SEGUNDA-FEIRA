package exercicios1809;

import java.util.Scanner;
/**
 *
 * @author profslpa
 */
public class Exercicios1809 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        int senha = 1234;
        int senhadigitada;
        int tentativas = 3;
        boolean acerto = false;
        
        while((tentativas > 0) && (acerto == false)){
                
        System.out.println("Digite a sua senha numerica");
       Scanner entrada = new Scanner(System.in);
        senhadigitada = entrada.nextInt();
       
     if (senhadigitada == senha) {
         System.out.println("Você acertou!");     
         acerto = true;
     }
     else{
         System.out.println("Você errou!"); 
     tentativas--;
     System.out.println ("voce tem " + tentativas + " tentativas");
    
     }
    }
        if (acerto == true){
            System.out.println("Login");
        }
        else {
             System.out.println("Login errado");
        }
    
    
}
}
